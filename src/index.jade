          h6.white.margin-none iOS App Store
          
      a(href="https://play.google.com/store/apps/details?id=com.bitpay.copay&hl=en" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-playstore.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Get it on
          h6.white.margin-none Google Play
          
      a(href="http://www.windowsphone.com/en-us/store/app/copay-wallet/4372479b-a064-4d18-8bd3-74a3bdb81c3a" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-winstore.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Download from
          h6.white.margin-none Windows Store 
               
      a(href="https://chrome.google.com/webstore/detail/copay/cnidaodnidkbaplmghlelgikaiejfhja?hl=en" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-chrome-app.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Get the
          h6.white.margin-none Chrome App
          
      a(href="https://github.com/bitpay/copay/releases" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-mac-os-x.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Available for
          h6.white.margin-none Mac OS X

      a(href="https://github.com/bitpay/copay/releases" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-microsoft.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Download for
          h6.white.margin-none Windows

      a(href="https://github.com/bitpay/copay/releases" target="blank").white.btn.btn-gray-medium-border.download
        .icon.left.h2.background-contain(style="background-image: url('/images/icon-linux.svg'); width: 2em; height: 1em;")
        .text-left.line-height-less
          small.gray-medium Get it for
          h6.white.margin-none Linux 
                    
                    
    .margin-top
      a.border-bottom-light.white(href="https://github.com/bitpay/copay/releases") Download the latest source code from GitHub &rsaquo;
  
  .section.bg-gray
    .row
      .column.large-3.small-6.text-center
        .icon.h2.background-contain.margin-bottom-less(style="background-image: url('/images/icon-globe.svg'); height:2.5em;")
        span Prices In  150
        p Currencies 
      .column.large-3.small-6.text-center
        .icon.h2.background-contain.margin-bottom-less(style="background-image: url('/images/icon-speech.svg'); height:2.5em;")
        span Multi-Language
        p  Support 
      .column.large-3.small-6.text-center
        .icon.h2.background-contain.margin-bottom-less(style="background-image: url('/images/icon-wallet-arrow-down.svg'); height:2.5em;")
        span HD Wallet 
        p  Backups 
      .column.large-3.small-6.text-center
        .icon.h2.background-contain.margin-bottom-less(style="background-image: url('/images/icon-flow.svg'); height:2.5em;")
        span Convenient Payment
        p  Proposal Flow
